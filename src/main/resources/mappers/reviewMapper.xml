<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.malloc.spring.ex.mybatis.dao.ReviewDAO">
  
  	<select id="selectReview" resultType="com.malloc.spring.ex.mybatis.model.Review" 
  	parameterType="int">
  		SELECT
  			`id`
  			, `storeId`
  			, `menu`
  			, `userName`
  			, `point`
  			, `review`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`new_review`
  		WHERE `id` = #{id}
  	</select>
  	
  	<insert id="insertReview" parameterType="map">
  		INSERT INTO 
  			`new_review`
  		(
  			`storeId`
  			, `menu`
  			, `userName`
  			, `point`
  			, `review`
  			, `createdAt`
  			, `updatedAt`)
  		VALUE
  		(
  			#{storeId}
  			, #{menu}
  			, #{userName}
  			, #{point}
  			, #{review}
  			, now()
  			, now()
  		)
  	</insert>
  	
  	<insert id="insertReviewByObject" parameterType="com.malloc.spring.ex.mybatis.model.Review">
  		INSERT INTO 
  			`new_review`
  		(
  			`storeId`
  			, `menu`
  			, `userName`
  			, `point`
  			, `review`
  			, `createdAt`
  			, `updatedAt`)
  		VALUE
  		(
  			#{storeId}
  			, #{menu}
  			, #{userName}
  			, #{point}
  			, #{review}
  			, now()
  			, now()
  		)
  	</insert>
  
  </mapper>